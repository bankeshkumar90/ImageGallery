<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardElevation="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/product"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:id="@+id/add_product_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="1"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_prop_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/dashboard_green" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_20"
                        android:text="@string/add_property"
                        android:textColor="@color/dashboard_green"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <LinearLayout
                android:id="@+id/pname_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:fontFamily="@font/roboto_medium"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/variant_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_22"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="text"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/product_dlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_remove_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pprice_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/price_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:fontFamily="@font/roboto_medium"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_22"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="none"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/price_dlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_remove_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pbarcode_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/barcode_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:fontFamily="@font/roboto_medium"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_barcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_22"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="none"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/barcode_dlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_remove_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pquantity_ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/product_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:fontFamily="@font/roboto_medium"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_22"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="none"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/quatity_dlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_remove_selected" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/product_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_10"
                    android:fontFamily="@font/roboto_medium"
                    android:lines="1"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_22"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/roboto_medium"
                    android:inputType="none"
                    android:text=""
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/inventory_hint"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_remove_selected"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
      <ImageView
          android:id="@+id/dlt_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_gravity="right"
        android:src="@drawable/ic_remove_selected"/>
</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>